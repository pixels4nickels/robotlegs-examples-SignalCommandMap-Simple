<?xml version = "1.0" encoding = "utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
               xmlns:s="library://ns.adobe.com/flex/spark"
               xmlns:mxml="robotlegs.bender.mxml.*"
               xmlns:bundles="robotlegs.bender.bundles.mvcs.*"
               xmlns:config="config.*"
               xmlns:bundle="bundle.*"
               width="640"
               height="480"
               creationComplete="creationCompleteHandler(event)" >
    <fx:Script>
		<![CDATA[
        import mx.events.FlexEvent;

        import views.AppView;

        protected function creationCompleteHandler(event:FlexEvent):void {
            contextTag.context.lifecycle.afterInitializing(contextInitialized);
        }

        protected function contextInitialized():void {
            addElement(new AppView());
        }

        ]]>
	</fx:Script>
    <fx:Declarations>
        <mxml:ContextBuilderTag id="contextTag" contextView="{this}">
            <bundles:MVCSBundle/>
            <bundle:SignalCommandMapBundle/>
            <config:AppConfig/>
        </mxml:ContextBuilderTag>
    </fx:Declarations>
</s:Application>
