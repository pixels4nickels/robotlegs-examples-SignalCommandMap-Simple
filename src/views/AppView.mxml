<?xml version = "1.0" encoding = "utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
          xmlns:s="library://ns.adobe.com/flex/spark"
          xmlns:views="views.*"
          width="100%"
          height="100%"
          implements="behaviours.start.IStartable"
          currentState="init">
    <fx:Script>
        <![CDATA[
        import actions.start.StartTrigger;

        public function set initTrigger(value:StartTrigger):void {
            startButton.addEventListener(MouseEvent.CLICK, function () {
                currentState = "game";
                value.dispatch()
            })
        }
        ]]>
    </fx:Script>
     <s:states>
         <s:State name="init"/>
         <s:State name="game" />
     </s:states>
    <s:Group id="startViewGroup"
             visible.init="true"
             visible="false"
             horizontalCenter="0"
             verticalCenter="0">
        <s:Button id="startButton" label="Start" />
    </s:Group>
    <s:VGroup id="gameViewGroup"
              visible.game="true"
              visible="false"
              gap="15"
              height="100%"
              width="100%"
              horizontalAlign="center"
              paddingBottom="10"
              paddingTop="10"
              paddingLeft="10"
              paddingRight="10"
            >
        <views:ScoreView/>
        <s:HGroup height="100%" verticalAlign="middle">
            <views:Enemy enemyType="Drone"/>
            <views:Enemy enemyType="Warship"/>
            <views:Enemy enemyType="Shuttle"/>
            <views:Enemy enemyType="Mothership"/>
        </s:HGroup>
        <views:StatusView/>
    </s:VGroup>

</s:Group>
